@model KindergartenAppService.Models.Activity

@{
    ViewData["Title"] = "Detalles de actividad";
}

<h1>Detalles</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<div>
    <h4>Actividad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kindergarter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kindergarter.Description)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    @if (TempData["SuccessMessage"] != null)
    {
        <a class="btn btn-primary" asp-action="Create" asp-route-id="@Model.Id">Crear otra</a>

    }
    <a asp-action="Index">Retornar al listado</a>
</div>
