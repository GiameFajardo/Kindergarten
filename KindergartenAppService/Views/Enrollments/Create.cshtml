@model KindergartenAppService.Models.Enrollment

@{
    ViewData["Title"] = "Create";
    //var date =(DateTime)ViewData["Now"];
    //Model.EnrollDay = date;
}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnrollDay" class="control-label"></label>
                @if (ViewData["Now"] != null)
	            {
                    <input asp-for="EnrollDay" class="form-control"/>
                }
                else
                {
                    <input asp-for="EnrollDay" class="form-control" />
                }

                <span asp-validation-for="EnrollDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KidId" class="control-label"></label>
                @if (ViewData["Now"] != null)
                {
                    <select asp-for="KidId" class="form-control" asp-items="ViewBag.KidId" ></select>
                }
                else
                {
                    <select asp-for="KidId" class="form-control" asp-items="ViewBag.KidId"></select>

                }
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

