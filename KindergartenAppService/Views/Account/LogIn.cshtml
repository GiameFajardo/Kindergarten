@model LogInViewModel

@{
    ViewBag.Title = "Inicio de sesión";
}
<div class="card p-4" style="background:#f1f8ff;min-width:500px;max-width:50%;">
    <h1 class="card-title">Registro de usuario</h1>

    <div class="row card-body">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" asp-for="RememberMe" >
                    <label class="form-check-label" for="inlineCheckbox1">Mantener sesión</label>
                </div>
                <button type="submit" class="btn btn-primary">Iniciar seción</button>
            </form>
        </div>
    </div>
</div>