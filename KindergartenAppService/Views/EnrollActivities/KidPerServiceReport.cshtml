@model KindergartenAppService.Models.EnrollActivity
@{
    ViewData["Title"] = "KidPerServiceReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>KidPerServiceReport</h1>

<div class="form-group">
    <form asp-action="KidPerServiceReport">
        <label asp-for="ActivityId" class="control-label"></label>
        <select asp-for="ActivityId" class="form-control" asp-items="ViewBag.Activities">
            <option value="">Seleccionar Servicio</option>

        </select>
        <span asp-validation-for="ActivityId" class="text-danger"></span>


        <div class="form-group">
            @*<a class="btn btn-primary" asp-controller="EnrollActivities" asp-action="KidPerServiceReport" asp-route="@Model">Generarte</a>*@
            <input type="submit" value="Generar" class="btn btn-primary" />
        </div>
    </form>
</div>